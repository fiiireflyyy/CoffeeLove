<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@drawable/coffee_bg"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:clipToOutline="true"
        android:cropToPadding="true"
        android:src="@drawable/person_filled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444" />

    <TextView
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:id="@+id/user_name_sub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Никнейм"
        android:textSize="16dp"
        android:textColor="@color/dark_brown"
        app:layout_constraintBottom_toTopOf="@+id/show_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_icon"
        app:layout_constraintTop_toTopOf="@+id/profile_icon" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginHorizontal="16dp"
        android:id="@+id/show_button"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/main_button"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:text="Показать профиль"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textScaleX="0.9"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_icon"
        app:layout_constraintTop_toBottomOf="@+id/user_name_sub" />

</androidx.constraintlayout.widget.ConstraintLayout>